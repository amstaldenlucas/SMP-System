@page
@model LoginModel

@{
    ViewData["Title"] = "Acessar conta";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<section>
    <div class="page-header min-vh-75">
        <div class="container">
            <div class="row">
                <div class="col-xl-4 col-lg-5 col-md-5 d-flex flex-column mx-auto">
                    <div class="card card-plain mt-4 mb-4" style="border: solid 1px lightgray;">
                        <div class="card-header pb-0 text-start">
                            <a href="/web" class="icon-block">
                                <i class="fas fa-angle-left"></i>
                            </a>
                            <h3 class="font-weight-bolder text-info text-gradient">Bem vindo de volta!</h3>
                            <p class="mb-0">Informe seu e-mail e senha para entrar</p>
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form id="account" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Senha</label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-check form-switch">
                                    <input asp-for="Input.RememberMe" class="form-check-input" />
                                    <label asp-for="Input.RememberMe" class="form-check-label">
                                        Lembrar senha?
                                    </label>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Log in</button>
                                </div>
                                <div class="form-group">
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Recuperar senha</a>
                                    </p>
                                    <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Criar novo usuário</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n10 w-50">
                        <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6" style="background-image:url('/img/curved-images/curved6.jpg')"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
