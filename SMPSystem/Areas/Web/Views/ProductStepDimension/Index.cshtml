@model ICollection<ProductStepDimension>
@{
    ViewData["Title"] = "Cota de Produtos";
}

@if (Model.Any())
{
    <div class="container-fluid pt-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6>Cota de Produtos</h6>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <table id="example" class="table table-striped items-hover w-100">
                                <thead>
                                    <tr>
                                        <th class="table-header text-center">Cód. Produto</th>
                                        <th class="table-header text-center ps-2">Produto</th>
                                        <th class="table-header text-center">Operação</th>
                                        <th class="table-header text-center">Tipo Dimensão</th>
                                        <th class="table-header text-center">Tipo Instrumento</th>
                                        <th class="table-header text-center">Valor mín.</th>
                                        <th class="table-header text-center">Valor Máx.</th>
                                        <th class="text-secondary opacity-7"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="align-middle text-center">
                                                <span class="text-primary text-xs font-weight-bold">@item.Product.Code</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-primary text-xs font-weight-bold">@item.Product.Name</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-primary text-xs font-weight-bold">@item.ProductionStep.Description</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-primary text-xs font-weight-bold">
                                                    @MeasuringDimensionType.TypeNameDescription(item.MeasuringDimensionType)
                                                </span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-primary text-xs font-weight-bold">
                                                    @MeasuringToolType.TypeNameDescription(item.MeasuringToolType)
                                                </span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-primary text-xs font-weight-bold">@item.MinimalValue</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-primary text-xs font-weight-bold">@item.MaximaumValue</span>
                                            </td>
                                            <td class="align-middle">
                                                <a href="javascript:;" class="text-primary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                                    Edit
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="container-fluid ">
    <a class="btn btn-primary" asp-action="Create">Cadastrar</a>
</div>

@section css
{

    <link type="text/css" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/css/bootstrap.min.css" />
    <link type="text/css" src="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css" />
}

@section scripts
{
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
    <script type="text/javascript" src="~/js/overview/datatable.js"></script>
    <script>
        $(document).ready(function () {
            CreteTable('example')
        });
    </script>
}
