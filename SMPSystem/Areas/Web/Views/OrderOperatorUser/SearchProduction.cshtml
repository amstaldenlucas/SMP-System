@model OrderWithDbUserVm
@{
    ViewData["Title"] = "Conferir Order Produção";
}
<div class="container-fluid row mh-100">
    <div class="col-12 col-lg-8 m-auto">
        <div class="card mr-0 mb-3">
            <div class="card-header pt-3 pb-0 ps-4">
                <h5 class="ps-2">Conferir Order Produção</h5>
            </div>
            <div class="card-body mr-0 mb-0 pb-2 pt-0">
                <form method="post" asp-action="OperatorProducing">
                    <div class="card-body row m-auto p-0 justify-content-between">

                        <div class="form-group row pe-0">
                            <div class="col-xl-6 pe-0">
                                <input type="hidden" asp-for="ProductionOrderId" class="form-control" />

                                <label asp-for="ProductionOrderCode" class="control-label"></label>
                                <input asp-for="ProductionOrderCode" class="form-control" />
                                <span asp-validation-for="ProductionOrderCode" class="text-danger"></span>
                            </div>
                            <div class="col-xl-6">
                                <label asp-for="DbUser.UserName" class="control-label"></label>
                                <input asp-for="DbUser.UserName" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row pe-0">
                            <div class="col-xl-6 pe-0">
                                <label asp-for="OrderProductStep.ProductProductionStep.ProductionStep.Code" class="control-label"></label>
                                <input asp-for="OrderProductStep.ProductProductionStep.ProductionStep.Code" class="form-control" />
                            </div>
                            <div class="col-xl-6">
                                <label asp-for="OrderProductStep.ProductProductionStep.ProductionStep.Description" class="control-label"></label>
                                <input asp-for="OrderProductStep.ProductProductionStep.ProductionStep.Description" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row pe-0">
                            <div class="col-xl-6 pe-0">
                                <label asp-for="OrderProductStep.ProductProductionStep.Product.Name" class="control-label"></label>
                                <input asp-for="OrderProductStep.ProductProductionStep.Product.Name" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row pe-0">
                            <div class="col-xl-6 pe-0">
                                <label asp-for="OrderProductStep.InitialQuantity" class="control-label"></label>
                                <input asp-for="OrderProductStep.InitialQuantity" class="form-control" />
                            </div>
                        </div>

                    </div>
                    <div class="card-footer py-0 row m-auto p-1">
                        <div class="form-group mb-0 mt-3">
                            <input type="submit" value="Confirmar e iniciar" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>