@model ProductionOrderVm
@{
    ViewData["Title"] = "Cadastrar Ordem de Produção";
}

<div class="container-fluid row mh-100">
    <div class="col-12 col-lg-8 m-auto">
        <div class="card mr-0 mb-3">
            <div class="card-header pt-3 pb-0 ps-4">
                <h5 class="ps-2">Cadastrar Ordem de Produção</h5>
            </div>
            <div class="card-body mr-0 mb-0 pb-2 pt-0">
                <form method="post">
                    <div class="card-body row m-auto p-0 justify-content-between">

                        <div class="form-group row pe-0">
                            <div class="col-xl-6">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <label asp-for="Code" class="control-label"></label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                            <div class="col-xl-6 pe-0">
                                <label asp-for="PrevisionDate" class="control-label"></label>
                                <input asp-for="PrevisionDate" class="form-control" />
                                <span asp-validation-for="PrevisionDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row pe-0">
                            <div class="col-xl-6">
                                <label asp-for="DbUserId" class="control-label"></label>
                                <select asp-for="DbUserId" asp-items="@Model.DbUserOptions" class="form-select"></select>
                            </div>
                            <div class="col-xl-6 pe-0">
                                <label asp-for="ProductId" class="control-label"></label>
                                <select asp-for="ProductId" asp-items="@Model.ProductOptions" class="form-select"></select>
                            </div>
                        </div>
                        <div class="form-group row pe-0">
                            <div class="col-xl-6">
                                <label asp-for="TotalQuantity" class="control-label"></label>
                                <input asp-for="TotalQuantity" class="form-control" />
                                <span asp-validation-for="TotalQuantity" class="text-danger"></span>
                            </div>
                            <div class="col-xl-6 pe-0">
                                <div class="col-xl pe-0">
                                    <label asp-for="Obs" class="control-label"></label>
                                    <textarea rows="4" class="form-control" asp-for="Obs"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer py-0 row m-auto p-1">
                        <div class="form-group mb-0 mt-3">
                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>